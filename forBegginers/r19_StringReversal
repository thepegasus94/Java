package day14_forLoops;
import java.util.Scanner;

public class C07_StringReversal {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Please enter the text you want to reverse:");
        String str = scanner.nextLine();
        // Java is Awesome
        // emosewA si avaJ
        // loop through the characters of the string in reverse order and print them
        for (int i = str.length()-1; i >=0 ; i--) {
            System.out.print(str.charAt(i));
        }
        System.out.println("");
        // store the reversed string in a new variable
        String reversedStr = "";
        for (int i = str.length()-1; i >=0 ; i--) {
            reversedStr += str.charAt(i);
        }
        System.out.println("Reversed string: " + reversedStr);
    }
}
