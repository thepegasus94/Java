package day15_nestedForLoop_MethodOlusturma;

import java.util.Scanner;

public class C02_NestedForLoop {
    public static void main(String[] args) {
        /*
            Take two integers from the user: the first one is the number of rows and
            the second one is the number of columns. Then draw the following shape:
            
            *  *  *  *  *
            *  *  *  *  *
            *  *  *  *  *
            *  *  *  *  *
         */
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the number of rows:");
        int rows = scanner.nextInt();
        System.out.println("Enter the number of columns:");
        int columns = scanner.nextInt();
        for (int i = 1; i <= rows; i++) { // loops through the rows
            for (int j = 1; j <= columns; j++) { // loops through the columns
                System.out.print("*  ");
            }
            System.out.println("");
        }
    }
}
